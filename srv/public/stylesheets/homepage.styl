boardCell-width = 12.5%
boardCell-min-width = 40px

white-color = #F3E5F5
black-color = #BA68C8

@import 'base/functions'

html
    position relative

body
    background #eee
    margin 0

#page
    padding-top 25px
    text-align center

#container
    width 100%
    max-width 1200px
    display inline-table
    text-align left

#board
    width 50%
    min-width board-min-width
    display table-cell

#boardTable
    display table
    width 100%

.boardRow
    display table-row

.boardCell
    width boardCell-width
    min-width boardCell-min-width
    display table-cell
    background-size 400%
    background-image url('/images/chess_vectors.svg')
    background-repeat no-repeat
    background-position 75px 75px

    &.black
        background-color black-color

    &.white
        background-color white-color

.scoreStrip
    width 100%
    height 30px
    top 0
    position relative

    &.black
        background #333
        color white

    &.white
        background #fff
        color black

    & .score
        line-height 30px
        margin-left 5%
        width 50%
        font-size 12px
        color inherit


.spanLeft
    float left
    color inherit

.spanRight
    float right
    color inherit

.stretchy-wrapper
    width 100%
    padding-bottom 100%
    position relative
    height 0

#chatbox
    display table-cell
    position relative
    top 0
    left 0
    right 0
    bottom 0
    width 50%
    height 100%
    border-left 1px solid #ccc
    vertical-align top
    font-size 14px

#messages
    position absolute
    left 0
    right 0
    top 0
    padding 3px
    bottom 30px
    background-color white
    overflow auto

#input
    position absolute
    display block
    bottom 0
    height 30px
    width 100%
    padding 0
    padding-left 3px
    border none
    border-top 1px solid purple