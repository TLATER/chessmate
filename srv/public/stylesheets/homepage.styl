// this stylus file. Fttb I guess it works, but rid of it ASAP.
base-color = #9c27b0
accent-color = #ffe57f

board-width = 46%
board-min-width = 320px
boardCell-width = 12.5%
boardCell-min-width = 40px

white-color = #F3E5F5
black-color = #BA68C8

chat-width = 46%
chat-min-width = 320px

@import 'base/functions'

html
    position relative

body
    background #eee
    margin 0

#page
    text-align center

#container
    width 100%
    max-width 1200px
    display inline-table
    text-align left

#board
    width 50%
    min-width board-min-width
    display table-cell

#boardTable
    display table
    width 100%

.boardRow
    display table-row

.boardCell
    width boardCell-width
    min-width boardCell-min-width
    display table-cell
    background-size 400%

    &.black
        background-color black-color

    &.white
        background-color white-color

.scoreStrip
    width 100%
    height 30px
    top 0
    position relative

    &.black
        background #333
        color white

    &.white
        background #fff
        color black

    & .score
        line-height 30px
        margin-left 5%
        width 50%
        font-size 12px
        color inherit


.spanLeft
    float left
    color inherit

.spanRight
    float right
    color inherit

.stretchy-wrapper
    width 100%
    padding-bottom 100%
    position relative
    height 0

#chatbox
    display table-cell
    width 50%
    height 100%
    min-height board-min-width
    border-left 1px solid #ccc
    vertical-align top
    padding 0 2% 0 2%
    font-size 12px

#messages
    display inline-block
    background-color white
    height 87%
    width 100%
    margin-top 5%
    overflow auto

#username
    display inline-block

#input
    display inline-block
    width 100%
    bottom 0
    height 16px
    border-top 1px solid #ccc
    border-radius 0.5em