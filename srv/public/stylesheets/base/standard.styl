// Set the body background to white so we know what to expect
body
    background-color white

// The font for the entire page
*
    font-family 'Roboto', sans-serif
    color black

// A standard style for a container with rounded edges
.roundedContainer
    position fixed
    min-height 100px
    border-radius .5em
    box-shadow 2px 2px 6px gray
    top 50%
    transform (-70%)

// A standard style for a raised button
.raisedButton
    min-width 88px
    height 36px
    line-height 36px
    text-align center
    margin 1px

    color rgba(255, 255, 255, .87)
    background-color #9C27B0
    font-weight bold

    transition all .1s
    cursor pointer
    box-shadow 1px 1px 3px gray

    &:active
        background-color darken(@background-color, 15%)
        box-shadow 3px 3px 6px gray