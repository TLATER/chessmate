// Set the body background to white so we know what to expect
body
    background-color: white

// The font family for the entire page
*
    font-family: 'Roboto', sans-serif

// A standard style for a container with rounded edges
.roundedContainer
    -moz-border-radius: 1em
    -webkit-border-radius: 1em
    border-radius: 1em

    box-shadow: 10px 10px 5px black