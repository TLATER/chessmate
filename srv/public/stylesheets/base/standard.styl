    -moz-transition arguments
    -webkit-transition arguments
    transition arguments

// Set the body background to white so we know what to expect
body
    background-color white

// The font for the entire page
*
    font-family 'Roboto', sans-serif
    color black

// A standard style for a container with rounded edges
.roundedContainer
    border-radius 1em

    box-shadow 2px 2px 6px gray

// A standard style for a raised button
.raisedButton
    min-width 88px
    height 36px

    transition(all .5s)
    border-radius(2px 2px 6px gray)
    box-shadow 2px 2px 6px gray

    &:active
        background-color #999999