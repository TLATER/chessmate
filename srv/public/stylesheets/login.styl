// Class

.login
    color: base-color
    background-color: white
    text-align: center
    width: 410px
    padding: 7px
    display: table
    margin: 0 auto

.homepageHeader
    padding: 80px 0px 0px 0px
    font-size: 120px
    text-align: center
    background-color base-color
    box-shadow 2px 2px 6px gray

.paragraph
    padding: 30px 0px 0px 0px
    text-align: center
    
.fieldName
    color black
