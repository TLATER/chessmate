base-color = #9c27b0
accent-color = #ffe57f

header-height = 50px

#header
    background-color base-color
    width 100%
    height header-height
    margin 0
    padding 0
    clear both

#container
    width 96%
    max-width 1200px
    margin 16px auto
    top header-height
    clear both

#container2
    float left
    width 100%
    overflow hidden
    position relative

#container1
    float left
    width 100%
    position relative
    right 50%

board-width = 48%
board-min-width = 320px
boardCell-width = 12.5%
boardCell-min-width = 40px

#board
    float left
    left 51%
    position relative
    overflow hidden
    margin 0
    padding 0
    width board-width
    min-width board-min-width
    border 1px solid #000
    display table

div.stretchy-wrapper
    width 100%
    padding-bottom 100%
    position relative

div.stretchy-wrapper > div
    position absolute
    top 0
    bottom 0
    left 0
    right 0

.boardRow
    display table-row

.boardCell
    width boardCell-width
    min-width boardCell-min-width
    display table-cell
    
chat-width = 48%
chat-min-width = 320px

#chatbox
    float left
    left 53%
    position relative
    overflow hidden
    margin 0
    padding 0
    width chat-width
    min-width chat-min-width
    height 100%
    min-height board-min-width
    border 1px solid #000

messages-height = 100% - 30px

#messages
    width 94%
    height 80%
    margin 3%
    clear both
    position absolute

#input
    width 100%
    position absolute
    bottom 5px
    height 36px
    line-height 36px
    border 1px solid #000

#inputBox
    height 30px
    margin-left 2%
    width 70%
    float left

#actionButton
    float right