base-color = #9c27b0
accent-color = #ffe57f

#container
    width 80%
    margin 10% auto
    clear both
    border 1px solid #000

#header
    background-color base-color
    width 100%
    height 50px
    margin 0
    padding 0
    float left
    clear both

board-min-length = 240px
boardCell-length = 12.5%
boardCell-min-length = 30px

#board
    float left
    clear both
    min-width board-length
    min-height board-length
    border 1px solid #000
    display table

.boardRow
    display table-row

.boardCell
    width boardCell-length
    min-width boardCell-min-length
    height boardCell--min-length
    min-height boardCell-min-length
    display table-cell
    
chat-width = 40%
chat-min-width = 240px

#chatbox
    width chat-width
    min-width chat-min-width
    height board-length
    min-height board-min-length
    float right
    border 1px solid #000

#messages
    width 90%
    margin 5%

#input
    width 90%
    height 36px
    line-height 36px

#inputBox
    height 30px

#actionButton
    float right