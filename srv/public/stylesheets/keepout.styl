base-color = #9c27b0
accent-color = #ffe57f

header-height = 50px

#header
    background-color base-color
    width 100%
    height header-height
    margin 0
    padding 0
    clear both

#container
    width 96%
    max-width 1200px
    margin 16px auto
    top header-height
    clear both

board-width = 50%
board-min-width = 320px
boardCell-width = 12.5%
boardCell-min-width = 40px

#board
    float left
    clear both
    margin 0
    padding 0
    width board-width
    min-width board-min-width
    border 1px solid #000
    display table

div.stretchy-wrapper
    width 100%
    padding-bottom 100%
    position relative

div.stretchy-wrapper > div
    position absolute
    top 0
    bottom 0
    left 0
    right 0

.boardRow
    display table-row

.boardCell
    width boardCell-width
    min-width boardCell-min-width
    display table-cell
    
chat-width = 47%
chat-min-width = 320px

#chatbox
    margin 0
    padding 0
    width chat-width
    min-width chat-min-width
    height board-width
    min-height board-min-width
    float right
    border 1px solid #000

messages-height = 90%

#messages
    width 90%
    height messages-height
    margin 5%
    clear both

#input
    width 90%
    bottom 5px
    height 36px
    line-height 36px

#inputBox
    height 30px
    margin-left 5%
    float left

#actionButton
    float right