base-color = #9c27b0
accent-color = #ffe57f

#container
    width 80%
    margin 10% auto
    clear both
    border 1px solid #000

#header
    background-color base-color
    width 100%
    height 50px
    margin 0
    padding 0
    float left
    clear both

board-length = 480px
board-max-length = 40%
square-length = 60px
square-max-length = 12.5%

#board
    width board-length
    max-width board-max-length
    height board-length
    max-height board-max-length
    float left
    clear both
    border 1px solid #000

.square
    width square-length
    min-width square-min-length
    height square-length
    min-width square-min-length
    background-color square-color
    
chat-width = 400px
chat-min-width = 280px

#chatbox
    width chat-width
    min-width chat-min-width
    height board-length
    min-height board-min-length
    float right
    border 1px solid #000

#messages
    width 90%
    margin 5%

#input
    width 90%
    height 36px
    line-height 36px

#inputBox
    height 30px

#actionButton
    float right